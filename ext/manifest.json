{
    "manifest_version": 3,
    "name": "Inwen",
    "version": "1.0.0",
    "description": "AI-powered word explanations with etymology, synonyms, and translations in Traditional Chinese. Select any text to get instant, contextual definitions.",
    "author": "Linus Lien",
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8080/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Inwen Settings",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "compromise.min.js",
                "content.js"
            ]
        }
    ]
}